{
  "name": "ui-scaffold",
  "version": "1.0.0",
  "description": "A personal assignment to create a scaffold frontend project structure using Node.js, Express and Nunjucks.",
  "main": "dist/src/server.js",
  "scripts": {
    "preinstall": "node -e \"process.platform === 'darwin' && require('child_process').spawn('sh', ['./npm_scripts/install_pre_commit.sh'], { stdio: 'inherit'})\" && node -e \"process.platform === 'win32' && require('child_process').spawn('cmd.exe', ['/c','call npm_scripts/install_pre_commit.bat'], { stdio: 'inherit'})\"",
    "postinstall": "npm run build",
    "build": "rimraf ./dist && tsc",
    "postbuild": "sass ./public/style/main.scss ./public/style/main.css",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "validate": "npm run eslint && npm run audit && npm run test",
    "audit": "npm audit --omit=dev",
    "eslint": "eslint .",
    "auto-fix": "eslint --fix .",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "start": "node dist/src/server.js",
    "deploy-docker": "docker build -t ui-scaffold .",
    "postdeploy-docker": "docker run -p 8001:8001 ui-scaffold"
  },
  "author": "Riwang Xue",
  "license": "Apache-2.0",
  "dependencies": {
    "axios": "^1.7.2",
    "body-parser": "^1.20.2",
    "compression": "^1.7.4",
    "connect-redis": "^7.1.1",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-session": "^1.18.0",
    "express-validator": "^7.1.0",
    "helmet": "^7.1.0",
    "http-status-codes": "^2.3.0",
    "i18next": "^23.11.5",
    "i18next-fs-backend": "^2.3.1",
    "i18next-http-middleware": "^3.6.0",
    "jest": "^29.7.0",
    "nhsuk-frontend": "^8.1.1",
    "nunjucks": "^3.2.4",
    "redis": "^4.6.14",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.4",
    "uuid": "^9.0.1",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.0.2",
    "@eslint/js": "^9.1.1",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/supertest": "^6.0.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "3.2.5",
    "sass": "^1.77.8",
    "ts-jest": "^29.1.5",
    "ts-node-dev": "^2.0.0"
  }
}
